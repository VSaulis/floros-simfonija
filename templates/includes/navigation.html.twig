<div class="navigation-container">
    <div class="container">
        <nav class="navigation">
            <a class="logo-container">
                <img class="logo" alt="Floros simfonija" src="{{ asset('images/logo.png') }}"/>
            </a>
            <div class="links-container">
                <a href="{{ path('home') }}" class="navigation-item {% if navigation_active is defined and navigation_active == 'home' %}active{% endif %}">{{ 'navigation.home' | trans }}</a>
                {% if location.products | length > 0 %}
                    <a href="{{ path('location menu', {id: location.id}) }}" class="navigation-item {% if navigation_active is defined and navigation_active == 'menu' %}active{% endif %}">{{ 'navigation.menu' | trans }}</a>
                {% endif %}
                {% if location.rooms | length > 0 %}
                    {% for category in getAllRoomCategories() %}
                        <a href="{{ path('location room category', {id: location.id, categoryId: category.id}) }}" class="navigation-item {% if navigation_active is defined and navigation_active == 'room_category_' ~ category.id %}active{% endif %}">{{ category.title(app.request.locale) }}</a>
                    {% endfor %}
                {% endif %}
                <a href="{{ path('location about us', {id: location.id}) }}" class="navigation-item {% if navigation_active is defined and navigation_active == 'about_us' %}active{% endif %}">{{ 'navigation.about_us' | trans }}</a>
                <a href="{{ path('location contacts', {id: location.id}) }}" class="navigation-item {% if navigation_active is defined and navigation_active == 'contacts' %}active{% endif %}">{{ 'navigation.contacts' | trans }}</a>
                {% if location.galleries | length > 0 %}
                    <a href="{{ path('location galleries', {id: location.id}) }}" class="navigation-item {% if navigation_active is defined and navigation_active == 'galleries' %}active{% endif %}">{{ 'navigation.galleries' | trans }}</a>
                {% endif %}
            </div>
        </nav>
    </div>
</div>