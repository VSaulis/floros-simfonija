{% extends 'layouts/page-layout.html.twig' %}
{% set title = 'titles.terms_and_conditions' | trans %}
{% set hotel_navigation_active = 'termsAndConditions' %}
{% set navigation_active = 'hotel_' ~ hotel.id %}
{% set hero_longitude = hotel.longitude %}
{% set hero_latitude = hotel.latitude %}

{% block additional_hero %}
    {% include 'includes/hotel-navigation.html.twig' %}
{% endblock %}

{% block main %}
    <div class="hotel-page">
        <div class="container sections">
            <section class="section">
                <h3 class="section-title">{{ 'titles.terms_and_conditions' | trans }}</h3>
                <div class="editor-content">{{ hotel.termsAndConditions | raw }}</div>
            </section>
        </div>
    </div>
{% endblock %}