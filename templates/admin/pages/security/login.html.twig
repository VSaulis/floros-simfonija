{% extends 'admin/layouts/side-image-layout.html.twig' %}

{% block content %}
    <div class="login-page" id="login-page">
        {% if error %}
            <div class="error">{{ error.messageKey|trans(error.messageData) }}</div>
        {% endif %}
        <h2>{{ 'admin.titles.login' | trans }}</h2>
        <form class="login-form form" method="post" novalidate>
            <div class="form-group">
                <label for="email">{{ 'admin.labels.email' | trans }}</label>
                <input id="email" type="email" value="{{ last_username }}" name="email">
            </div>
            <div class="form-group">
                <label for="password">{{ 'admin.labels.password' | trans }}</label>
                <input type="password" name="password" id="password">
            </div>
            <div class="block-footer">
                <button type="submit" class="button button-primary">{{ 'admin.buttons.login' | trans }}</button>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </form>
    </div>
{% endblock %}